

<form asp-action="CrearUsuarios">
    @* Inicio del Formulario*@

    @{
        IEnumerable<string> strList = new List<string> { "POO", "TW", "MAT3", "FIS1" };
    }
    <div class="container vh-100 w-50">
        <h1>Agregar Usuarios</h1>
        <br />
        <div class="form-group row">
            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Nombre Usuario:</label>
                </div>
                <div class="col-md-8 pb-4">
                    @Html.TextBox("nombre", "", new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Contraseña:</label>
                </div>
                <div class="col-md-8 pb-4">
                    @Html.Password("Contrasenia", "contrasenia", new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Género:</label>
                </div>
                <div class="col-md-4 pb-4">
                    @Html.RadioButton("Genero", "M", true, new { @id = "masculino" }) Masculino
                </div>
                <div class="col-md-4 pb-4">
                    @Html.RadioButton("Genero", "F", true, new { @id = "femenino" }) Femenino
                </div>

            </div>

            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Dirección:</label>
                </div>
                <div class="col-md-8 pb-4">
                    @Html.TextArea("Direccion", "", new { @class = "form-control", id = "idDireccion" })
                </div>
            </div>

            <div class="row d-flex">
                <div class="col-md-4 pb-4">
                    <label>Pasatiempos:</label>
                </div>
                <div class="col-md-2 pb-4">
                    @Html.RadioButton("Pasatiempos", "Bailar") Bailar
                </div>
                <div class="col-md-2 pb-4">
                    @Html.RadioButton("Pasatiempos", "Correr") Correr
                </div>
                <div class="col-md-2 pb-4">
                    @Html.RadioButton("Pasatiempos","Escalar") Escalar
                </div>
                <div class="col-md-2 pb-4">
                    @Html.RadioButton("Pasatiempos", "Peliculas") Películas
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Curso:</label>
                </div>
                <div class="col-md-8 pb-4">
                    @Html.DropDownList("curso", new SelectList(strList, strList.FirstOrDefault()), "--Seleccionar curso---")
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 pb-4">
                    <label>Conocimientos:</label>
                </div>
                <div class="col-md-8 pb-4">
                    @Html.ListBox("Conocimientos", new List<SelectListItem>{
                    new SelectListItem{Text="C#",Value="1"},
                    new SelectListItem{Text="ASP.NET",Value="2"},
                    new SelectListItem{Text="ASP.NET Core",Value="3"},
                    new SelectListItem{Text="Azure",Value="4"}
                    })
                </div>
            </div>
            <div class="row">
                <input type="submit" class="btn btn-dark" value="Guardar Datos"></input>
                

            </div>

        </div>

    </div>
    
    @* Fin del Formulario*@
</form>

